{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      { "name": "workflow" }
    ],
    "paths": {
      "@/*": ["apps/dashboard/*"],
      "@standup/services-github": ["packages/services-github/src/index.ts"],
      "@standup/services-github/*": ["packages/services-github/src/*"],
      "@standup/services-claude": ["packages/services-claude/src/index.ts"],
      "@standup/services-claude/*": ["packages/services-claude/src/*"],
      "@standup/storage-fs": ["packages/storage-fs/src/index.ts"],
      "@standup/storage-fs/*": ["packages/storage-fs/src/*"],
      "@standup/config": ["packages/config/src/index.ts"],
      "@standup/config/*": ["packages/config/src/*"],
      "@standup/workflow": ["packages/workflow/src/index.ts"],
      "@standup/workflow/*": ["packages/workflow/src/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
